{% extends 'base.html.twig' %}

{% block title %}Medecin{% endblock %}

{% block body %}
  
    <h1 align="center">Medecin</h1>
    <div class="col-xl-5 col-lg-2 col-md-5 col-sm-10 mx-auto text-center form p-9">    
    <table class="table table-striped">
        <thead class="thead-dark">
            
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medecin.id }}</td>
            </tr>
            <tr>
                <th>Matricule</th>
                <td>{{ medecin.matricule }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ medecin.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ medecin.nom }}</td>
            </tr>
            <tr>
                <th>Date naissance</th>
                <td>{{ medecin.datenaisse ? medecin.datenaisse|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ medecin.telephone }}</td>
            </tr>
            <tr>
                <th>Service</th>
                <td>{{ medecin.service }}</td>
            </tr>
           
        </tbody>
    </table>

    <a href="{{ path('medecin_index') }}" class="btn btn-success">Voir liste</a>

    <a href="{{ path('medecin_edit', {'id': medecin.id}) }}" class="btn btn-primary">Editer</a>

    {{ include('medecin/_delete_form.html.twig') }}
{% endblock %}
